@model IEnumerable<WatchShop.EntityFramework.Supplier>

@{
    ViewBag.Title = "List Suppliers";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SupplierName)
        </th>
        <th>Thao tác</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SupplierName)
        </td>
        <td>
            @Html.ActionLink("Cập nhật", "Edit", new { id=item.SupplierId }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.SupplierId }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.SupplierId })
        </td>
    </tr>
}

</table>
