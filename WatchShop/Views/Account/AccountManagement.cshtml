@model WatchShop.EntityFramework.User
@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var UserName = Model.Name;
}

@RenderPage("~/Views/Shared/Breadcrum.cshtml")
@section Script{
    <script src="~/Assets/Client/js/controller/UserController.js"></script>
}

<!-- Content page -->
<section class="bg0 p-t-10 p-b-116">
    <div class="container">
        <div class="col-lg-10 col-xl-7 m-lr-auto m-b-20">
            <h4 class=" mtext-105 cl2 txt-center p-b-20">
                Tài khoản của @UserName
            </h4>
        </div>
        <div class="row">

            @RenderPage("~/Views/Shared/AccountNavigation.cshtml")
            <div class="col-lg-10 col-xl-8 m-b-50">
                <div class="bor10 m-l-5 m-r--20 m-lr-0-xl p-all-20">
                    <h4 class="mtext-90 cl2 txt-center p-t-13 p-b-13">
                        Thông tin tài khoản
                    </h4>
                    @using (Html.BeginForm("AccountManagement", "Account", FormMethod.Post, new { @class = "w-full" }))
                    {
                        @Html.HiddenFor(model => model.UserId)
                        @Html.HiddenFor(model => model.UserName)
                        @Html.HiddenFor(model => model.Password)
                        @Html.HiddenFor(model => model.UserRoleId)
                        @Html.HiddenFor(model => model.Status)
                        @Html.HiddenFor(model => model.CreatedDate)


                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        if (ViewBag.Success != null)
                        {
                            <div class="alert alert-success">@ViewBag.Success</div>
                        }
                        if (ViewBag.Failed != null)
                        {
                            <div class="alert alert-danger">@ViewBag.Failed</div>
                        }
                        <div class="row p-b-25">
                            <div class="col-sm-6 p-b-5">
                                @Html.LabelFor(model => model.Name, new { @class = "stext-102 cl3" })
                                <div>
                                    @Html.TextBoxFor(model => model.Name, new { @class = "size-111 bor8 stext-102 cl2 p-lr-20" })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6 p-b-5">
                                @Html.LabelFor(model => model.Email, new { @class = "stext-102 cl3" })
                                <div>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "size-111 bor8 stext-102 cl2 p-lr-20" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6 p-b-5">
                                @Html.LabelFor(model => model.Phone, new { @class = "stext-102 cl3" })
                                <div>
                                    @Html.TextBoxFor(model => model.Phone, new { @class = "size-111 bor8 stext-102 cl2 p-lr-20" })
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6 p-b-5">
                                @Html.LabelFor(model => model.Address, new { @class = "stext-102 cl3" })
                                <div>
                                    @Html.TextBoxFor(model => model.Address, new { @class = "size-111 bor8 stext-102 cl2 p-lr-20" })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6 p-b-5">
                                @Html.LabelFor(model => model.Province, new { @class = "stext-102 cl3" })
                                <div>
                                    @Html.DropDownListFor(model => model.Province, new SelectList(new string[] { }), new { @class = "size-111 bor8 stext-102 cl2 p-lr-20", @id = "ddlProvince" })
                                    @Html.ValidationMessageFor(model => model.Province, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6 p-b-5">
                                @Html.LabelFor(model => model.District, new { @class = "stext-102 cl3" })
                                <div>
                                    @Html.DropDownListFor(model => model.District, new SelectList(new string[] { }), new { @class = "size-111 bor8 stext-102 cl2 p-lr-20", @id = "ddlDistrict" })

                                    @Html.ValidationMessageFor(model => model.District, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <input value="Cập nhật" type="submit" class="m-auto flex-c-m stext-101 cl0 size-112 bg7 bor11 hov-btn3 p-lr-15 trans-04 m-b-10" />
                    }
                </div>
            </div>
        </div>
    </div>
</section>


