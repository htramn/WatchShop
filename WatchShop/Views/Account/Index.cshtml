@model WatchShop.EntityFramework.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="index.html" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            Account
        </span>
    </div>
</div>


<!-- Content page -->
<section class="bg0 p-t-10 p-b-116">
    <div class="container">
        <div class="col-lg-10 col-xl-7 m-lr-auto m-b-20">
            <h4 class=" mtext-105 cl2 txt-center p-b-20">
                Tài khoản của bạn
            </h4>
        </div>
        <div class="row">

            <div class="col-sm-10 col-lg-4 col-xl-4 m-lr-auto m-b-50">
                <div class="bor10 p-lr-25 p-t-30 p-b-40 m-l-40 m-r-40 m-lr-0-xl p-lr-15-sm">
                    <h4 class="mtext-109 cl2 p-b-20">
                        Hi, @Model.Name
                    </h4>
                    <hr class="p-b-20">

                    <button class="flex-c-m stext-101 cl10 size-121 bg0 bor18 hov-btn1 m-b-10 p-lr-0 trans-04 pointer">
                        Account
                    </button>

                    <button class="flex-c-m stext-101 cl10 size-121 bg0 bor18 hov-btn1 m-b-10 p-lr-0 trans-04 pointer">
                        Track Order
                    </button>


                    <button class="flex-c-m stext-101 cl10 size-121 bg0 bor18 hov-btn1 m-b-10 p-lr-0 trans-04 pointer">
                        Logout
                    </button>

                </div>
            </div>

            <div class="col-lg-10 col-xl-8 m-b-50">
                <div class="bor10 m-l-5 m-r--20 m-lr-0-xl">
                    <h4 class="mtext-90 cl2 txt-center p-t-13 p-b-13">
                        Order history
                    </h4>
                    <table class="order-history">
                        <tr class="table_head">
                            <th class="column-5">Order</th>
                            <th class="column-5">Order Date</th>
                            <th class="column-5">Total</th>
                            <th class="column-5">Status</th>
                            <th class="column-5">Detail</th>
                        </tr>

                        <tr class="table_row">
                            <td class="column-5">
                                012341
                            </td>
                            <td class="column-5">20/09/2021</td>
                            <td class="column-5">$ 36.00</td>
                            <td class="column-5">
                                Done
                            </td>
                            <td class="column-5"><a class="cl1 hov-cl2" href="#">Detail</a></td>
                        </tr>
                    </table>


                </div>
            </div>
        </div>
    </div>
</section>
