@using WatchShop.EntityFramework
@{ 
    IEnumerable<Product> products = ViewBag.Product;
}
<div class="side-menu">
    <div class="bor17 of-hidden pos-relative">
        <input class="stext-103 cl2 plh4 size-116 p-l-28 p-r-55" type="text" name="search" placeholder="Tìm kiếm">

        <button class="flex-c-m size-122 ab-t-r fs-18 cl4 hov-cl1 trans-04">
            <i class="zmdi zmdi-search"></i>
        </button>
    </div>

    <div class="p-t-55">
        <h4 class="mtext-112 cl2 p-b-33">
            Danh mục Blog
        </h4>

        <ul>
            <li class="bor18">
                <a href="#" class="dis-block stext-115 cl6 hov-cl1 trans-04 p-tb-8 p-lr-4">
                    Đồng hồ nam
                </a>
            </li>

            <li class="bor18">
                <a href="#" class="dis-block stext-115 cl6 hov-cl1 trans-04 p-tb-8 p-lr-4">
                    Đồng hồ nữ
                </a>
            </li>

            <li class="bor18">
                <a href="#" class="dis-block stext-115 cl6 hov-cl1 trans-04 p-tb-8 p-lr-4">
                    Dây đồng hồ
                </a>
            </li>

            <li class="bor18">
                <a href="#" class="dis-block stext-115 cl6 hov-cl1 trans-04 p-tb-8 p-lr-4">
                    Đồng hồ và trang phục
                </a>
            </li>

            <li class="bor18">
                <a href="#" class="dis-block stext-115 cl6 hov-cl1 trans-04 p-tb-8 p-lr-4">
                    Đồng hồ và sự kiện
                </a>
            </li>
        </ul>
    </div>

    <div class="p-t-65">
        <h4 class="mtext-112 cl2 p-b-33">
            Gợi ý
        </h4>

        <ul>
            @foreach (var item in products)
            {
                <li class="flex-w flex-t p-b-30">
                    <a href="@Url.Action("ProductDetail","Product", new { id = item.ProductId })" class="wrao-pic-w size-214 hov-ovelay1 m-r-20">
                        <img class="size-214" src="@item.Image" alt="PRODUCT">
                    </a>

                    <div class="size-215 flex-col-t p-t-8">
                        <a href="@Url.Action("ProductDetail","Product", new { id = item.ProductId })" class="stext-116 cl8 hov-cl1 trans-04">
                            @item.ProductName
                        </a>

                        <span class="stext-116 cl6 p-t-20">
                            @WatchShop.Common.StringHelper.CurrencyFormat(item.SalePrice)
                        </span>
                    </div>
                </li>
            }
        </ul>
    </div>



</div>
