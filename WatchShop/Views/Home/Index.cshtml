<!-- Product -->
<section class="sec-product bg0 p-t-100 p-b-50">
    <div class="container">
        <div class="p-b-32">
            <h3 class="ltext-105 cl5 txt-center respon1">
                Sản phẩm nổi bật
            </h3>
        </div>

        <!-- Tab01 -->
        <div class="tab01">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item mtext-104 p-b-10">
                    <a class="nav-link stext-106 active" data-toggle="tab" href="#best-seller" role="tab">Bán chạy</a>
                </li>

                <li class="nav-item stext-106 p-b-10">
                    <a class="nav-link stext-106" data-toggle="tab" href="#Newest" role="tab">Mới nhất</a>
                </li>

                <li class="nav-item stext-106 p-b-10">
                    <a class="nav-link stext-106" data-toggle="tab" href="#Sale" role="tab">Khuyến mãi</a>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content p-t-50">
                <!-- - -->
                <div class="tab-pane fade show active" id="best-seller" role="tabpanel">
                    <!-- Slide2 -->
                    <div class="wrap-slick2">
                        <div class="slick2">
                            @foreach (var product in BestSeller)
                            {
                                <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
                                    <!-- Block2 -->
                                    <div class="block2">
                                        <div class="block2-pic hov-img0">
                                            <img src=" @product.Image" alt="IMG-PRODUCT">

                                            <a href="@Url.Action("AddItem","Cart", new { productId = product.ProductId,quantity=1})" class="block2-btn flex-c-m stext-103 cl0 size-102 bg1 bor2 hov-btn1 p-lr-15 trans-04 ">
                                                Add to Cart
                                            </a>
                                        </div>

                                        <div class="block2-txt flex-w flex-t p-t-14">
                                            <div class="block2-txt-child1 flex-col-l ">
                                                <a href="@Url.Action("ProductDetail","Product", new { id = product.ProductId })" class="stext-106 cl8 hov-cl1 trans-04 js-name-b2 p-b-6 ">
                                                    @Html.DisplayFor(modelItem => product.ProductName)
                                                </a>

                                                <span class="stext-106 cl2">
                                                    <span class="stext-105 text-decoration-line cl4"> @product.OldPrice</span>

                                                    &nbsp;@WatchShop.Common.StringHelper.CurrencyFormat(product.SalePrice)
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            }

                        </div>
                    </div>
                </div>


                <!-- - -->
                <div class="tab-pane fade" id="Newest" role="tabpanel">
                    <!-- Slide2 -->
                    <div class="wrap-slick2">
                        <div class="slick2">
                            @foreach (var product in Newest)
                            {
                                <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
                                    <!-- Block2 -->
                                    <div class="block2">
                                        <div class="block2-pic hov-img0">
                                            <img src=" @product.Image" alt="IMG-PRODUCT">

                                            <a href="@Url.Action("AddItem","Cart", new { productId = product.ProductId,quantity=1})" class="block2-btn flex-c-m stext-103 cl0 size-102 bg1 bor2 hov-btn1 p-lr-15 trans-04 ">
                                                Add to Cart
                                            </a>
                                        </div>

                                        <div class="block2-txt flex-w flex-t p-t-14">
                                            <div class="block2-txt-child1 flex-col-l ">
                                                <a href="@Url.Action("ProductDetail","Product", new { id = product.ProductId })" class="stext-106 cl8 hov-cl1 trans-04 js-name-b2 p-b-6 ">
                                                    @Html.DisplayFor(modelItem => product.ProductName)
                                                </a>

                                                <span class="stext-106 cl2">
                                                    <span class="stext-105 text-decoration-line cl4"> @product.OldPrice</span>

                                                    &nbsp;@WatchShop.Common.StringHelper.CurrencyFormat(product.SalePrice)
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- - -->
                <div class="tab-pane fade" id="Sale" role="tabpanel">
                    <!-- Slide2 -->
                    <div class="wrap-slick2">
                        <div class="slick2">
                            @foreach (var product in Sale)
                            {
                                <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
                                    <!-- Block2 -->
                                    <div class="block2">
                                        <div class="block2-pic hov-img0">
                                            <img src=" @product.Image" alt="IMG-PRODUCT">

                                            <a href="@Url.Action("AddItem","Cart", new { productId = product.ProductId,quantity=1})" class="block2-btn flex-c-m stext-103 cl0 size-102 bg1 bor2 hov-btn1 p-lr-15 trans-04 ">
                                                Add to Cart
                                            </a>
                                        </div>

                                        <div class="block2-txt flex-w flex-t p-t-14">
                                            <div class="block2-txt-child1 flex-col-l ">
                                                <a href="@Url.Action("ProductDetail","Product", new { id = product.ProductId })" class="stext-106 cl8 hov-cl1 trans-04 js-name-b2 p-b-6 ">
                                                    @Html.DisplayFor(modelItem => product.ProductName)
                                                </a>

                                                <span class="stext-106 cl2">
                                                    <span class="stext-105 text-decoration-line cl4"> @product.OldPrice</span>

                                                    &nbsp;@StringHelper.CurrencyFormat(product.SalePrice)
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Blog -->
<section class="sec-blog bg0 p-t-60 p-b-90">
    <div class="container">
        <div class="p-b-66">
            <h3 class="ltext-105 cl5 txt-center respon1">
                Blog
            </h3>
        </div>

        <div class="row">

            @foreach (var item in Blog)
            {
            <div class="col-sm-6 col-md-4 p-b-40">
                <div class="blog-item">
                    <div class="hov-img0 ">
                        <a href="@Url.Action("Detail","Blog",new { id=item.BlogId})">
                            <img src="@item.Image" alt="IMG-BLOG">
                        </a>
                    </div>

                    <div class="p-t-15">
                        <div class="stext-107 flex-w p-b-14">
                            <span class="m-r-3">
                                <span class="cl4">
                                    By
                                </span>

                                <span class="cl5">
                                    Nancy Ward
                                </span>
                            </span>

                            <span>
                                <span class="cl4">
                                    on
                                </span>

                                <span class="cl5">
                                    @StringHelper.getDateFull(item.CreatedDate)
                                </span>
                            </span>
                        </div>

                        <h4 class="p-b-12">
                            <a href="@Url.Action("Detail","Blog",new { id=item.BlogId})" class="mtext-101 cl2 hov-cl1 trans-04">
                                @item.Title
                            </a>
                        </h4>

                        <p class="stext-108 cl6">
                            @item.Description
                        </p>
                    </div>
                </div>
            </div>
                    }

               
            </div>
    </div>
</section>


