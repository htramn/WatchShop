@model WatchShop.EntityFramework.ContactEmail
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Title page -->
<section class="bg-img1  p-lr-15 p-tb-92" style="background-image: url('/Assets/Client/images/bg-01.jpg');">
    <h2 class="ltext-105 cl0 p-l-100 ">
        Liên hệ
    </h2>
</section>



<!-- Content page -->
<section class="bg0 p-t-104 p-b-116">
    <div class="container">
        <div class="flex-w flex-tr">
            <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md">
                @*@using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "w-full" }))*@
                @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                {
                    <h4 class="mtext-105 cl2 txt-center p-b-30">
                        Lời nhắn tới WatchShop
                    </h4>

                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success</div>
                    }
                    if (ViewBag.Failed != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Failed</div>
                    }

                    <div class="bor8 m-b-20 how-pos4-parent">
                        @Html.TextBoxFor(model => model.Email, new { @class = "stext-111 cl2 plh3 size-116 p-l-62 p-r-30", @placeholder = "Email của bạn", @type = "text", @name = "email" })
                        @*<input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="text" name="email" placeholder="Email của bạn">*@
                        <img class="how-pos4 pointer-none" src="/Assets/Client/images/icons/icon-email.png" alt="ICON">
                    </div>

                    <div class="bor8 m-b-30">
                        @Html.TextAreaFor(model => model.Content, new { @class = "stext-111 cl2 plh3 size-120 p-lr-28 p-tb-25", @placeholder = "Chúng tôi có thể giúp gì cho bạn?" })
                        @*<textarea class="stext-111 cl2 plh3 size-120 p-lr-28 p-tb-25" name="msg" placeholder="Chúng tôi có thể giúp gì cho bạn?"></textarea>*@
                    </div>

                    <button type="submit" class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer">
                        Gửi
                    </button>

                }


            </div>

            <div class="size-210 bor10 flex-w flex-col-m p-lr-93 p-tb-30 p-lr-15-lg w-full-md">
                <div class="flex-w w-full p-b-42">
                    <span class="fs-18 cl5 txt-center size-211">
                        <span class="lnr lnr-map-marker"></span>
                    </span>

                    <div class="size-212 p-t-2">
                        <span class="mtext-110 cl2">
                            Địa chỉ
                        </span>

                        <p class="stext-115 cl6 size-213 p-t-18">
                            WatchShop, 225 Đường số 8, Thủ Đức, Tp. Hồ Chí Minh
                        </p>
                    </div>
                </div>

                <div class="flex-w w-full p-b-42">
                    <span class="fs-18 cl5 txt-center size-211">
                        <span class="lnr lnr-phone-handset"></span>
                    </span>

                    <div class="size-212 p-t-2">
                        <span class="mtext-110 cl2">
                            Hãy gọi tới
                        </span>

                        <p class="stext-115 cl1 size-213 p-t-18">
                            +84 974 768720
                        </p>
                    </div>
                </div>

                <div class="flex-w w-full">
                    <span class="fs-18 cl5 txt-center size-211">
                        <span class="lnr lnr-envelope"></span>
                    </span>

                    <div class="size-212 p-t-2">
                        <span class="mtext-110 cl2">
                            Hỗ trợ mua hàng
                        </span>

                        <p class="stext-115 cl1 size-213 p-t-18">
                            contact@watchshop.com
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


